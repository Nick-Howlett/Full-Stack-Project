<!DOCTYPE html>
<html>
  <head>
    <title>Sherwood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'sherwood_logo_green.png' %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.newsAPIKey = "<%= Rails.application.credentials.news[:api_key] %>"
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-137274645-1"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-137274645-1');
      </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
